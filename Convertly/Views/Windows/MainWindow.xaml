<Window x:Class="Convertly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Convertly"
        xmlns:fa="http://schemas.fontawesome.com/icons/"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="700" Width="1300"
        MinHeight="365" MinWidth="650"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Column="0" Style="{StaticResource TabControleMainStyle}">
            
            <TabItem Header="Конвертер" FontSize="15">
                
                <Grid>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Label Content="Изображений" Grid.Row="0" Grid.Column="0" Style="{StaticResource Lable}"/>
                    <Button Grid.Column="0" Grid.Row="1"
                            HorizontalAlignment="Center" 
                            Command="{Binding NavigateToImageConvertPageCommand}"
                            Template="{StaticResource MenuButtonTemplate}"
                            ToolTip="Конвертор изображений">
                        
                        <fa:ImageAwesome Icon="Regular_FileImage" Foreground="Black" Height="40"/>
                        
                    </Button>

                    <Label Content="Документов" Grid.Row="0" Grid.Column="1" Style="{StaticResource Lable}"/>
                    <Button Grid.Column="1" Grid.Row="1" 
                            HorizontalAlignment="Center"  
                            Command="{Binding NavigateToImageConvertPageCommand}" 
                            Template="{StaticResource MenuButtonTemplate}" 
                            ToolTip="Конвертор документов">

                        <fa:ImageAwesome Icon="Regular_FileWord" Foreground="Black" Height="40"/>

                    </Button>

                    <Label Content="Видео" Grid.Row="0" Grid.Column="2" Style="{StaticResource Lable}"/>
                    <Button Grid.Column="2" Grid.Row="1" 
                            HorizontalAlignment="Center"
                            Command="{Binding NavigateToImageConvertPageCommand}" 
                            Template="{StaticResource MenuButtonTemplate}" 
                            ToolTip="Конвертор видео">

                        <fa:ImageAwesome Icon="Regular_FileVideo" Foreground="Black" Height="40"/>

                    </Button>

                    <Label Content="Аудио" Grid.Row="0" Grid.Column="3" Style="{StaticResource Lable}"/>
                    <Button Grid.Column="3" Grid.Row="1" 
                            HorizontalAlignment="Center" 
                            Command="{Binding NavigateToImageConvertPageCommand}" 
                            Template="{StaticResource MenuButtonTemplate}" 
                            ToolTip="Конвертор аудио">

                        <fa:ImageAwesome Icon="Regular_FileAudio" Foreground="Black" Height="40"/>

                    </Button>

                </Grid>
                
            </TabItem>

            <TabItem Header="Создание GIF">
                
            </TabItem>
            
        </TabControl>
        
        
